{
  "openapi": "3.0",
  "info": {
    "version": "1.0.0",
    "title": "Then Pawn Shop API",
    "description": "API to pawn an item if its value is over 100",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "servers": [
    {
      "url": "/",
      "description": "local dev server"
    }
  ],
  "tags": [
    {
      "name": "Pawn",
      "description": "API for pawn shop"
    }
  ],
  "consumes": ["application/json"],
  "definitions": {
    "customer": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number"
        },
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        }
      }
    },
    "pawn": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number"
        },
        "loanDate": {
          "type": "string"
        },
        "loanSum": {
          "type": "number"
        },
        "expiryDate": {
          "type": "string"
        },
        "customerId": {
          "type": "number"
        }
      }
    }
  },
  "paths": {
    "/pawn": {
      "post": {
        "tags": ["Pawn"],
        "summary": "Post an item to pawn",
        "requestBody": {
          "description": "pawn object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "example": {
                  "loanSum": 1,
                  "customerId": 1
                }
              }
            }
          }
        },
        "produces": ["application/json"],
        "responses": {
          "201": {
            "description": "created",
            "schema": {
              "$ref": "#/definitions/pawn"
            }
          },
          "400": {
            "description": "loan sum must be over 100",
            "schema": {
              "exmaple": {
                "message": "loan sum must be over 100"
              }
            }
          },
          "500": {
            "description": "server error"
          }
        }
      }
    }
  }
}
